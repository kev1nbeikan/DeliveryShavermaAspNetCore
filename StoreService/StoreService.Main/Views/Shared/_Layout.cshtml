@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/showMessage.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/buttonOrder.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/tableOrder.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/confirmWindow.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/navBar.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="StoreView" asp-action="Index">游볯햣햢햦혪혝햦햣</a>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="StoreView" asp-action="StoreProductsInventory">햊햫쒫왏쫨햟햦향햟혡햦혪</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="StoreView" asp-action="info">햎햟햡햟향햦햫</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="StoreView" asp-action="CurrentOrder">행햟햨햟향혦</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - 햗햟쒫왐햪햟 - <a asp-area="" asp-controller="User" asp-action="Privacy">Privacy</a>
    </div>
</footer>
@await Html.PartialAsync("_InfoMassgesPartial");


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/acceptWindow.js" asp-append-version="true"></script>
<script src="~/js/cancelWindow.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/currentOrder.js" asp-append-version="true"></script>
<script src="~/js/lastOrder.js" asp-append-version="true"></script>
<script src="~/js/cancelOrder.js" asp-append-version="true"></script>
<script src="~/js/showMassage.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>